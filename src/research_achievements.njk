<section id="research-achievements" class="section">
    <div class="container">
        <h2 class="section-title">研究実績</h2>

        <h3 class="subsection-title">原著論文</h3>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th class="col-year">年</th>
                        <th class="col-type">種別</th>
                        <th class="col-item">項目</th>
                    </tr>
                </thead>
                <tbody>
                    {% for row in achievements.papers %}
                    <tr>
                        <td>{{ row.date }}</td>
                        <td>{{ row.type }}</td>
                        <td>{{ row.content | safe }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

