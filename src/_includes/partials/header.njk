<header class="header">
    <div class="header-inner">
        <h1 class="site-title"><a href="/index.html">{{ site.name }}</a></h1>
        <nav class="nav">
            <ul class="nav-list">
                {% for item in nav %}
                <li class="nav-item"><a href="{{ item.href }}">{{ item.label }}</a></li>
                {% endfor %}
            </ul>
        </nav>
        <button class="menu-toggle" aria-label="メニューを開く">
            <span class="menu-icon"></span>
        </button>
    </div>
</header>
