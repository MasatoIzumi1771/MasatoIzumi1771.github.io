layout: base.njk
title: スキル
bodyClass: skills-page
permalink: /skills.html
---
<section id="skills" class="section">
    <div class="container">
        <h2 class="section-title">スキル</h2>

        <h3 class="subsection-title">資格</h3>
        <div class="table-container qualification-table-container">
            <table>
                <thead>
                    <tr>
                        <th class="col-year col-date">取得年月日</th>
                        <th class="col-item col-qualification">資格名</th>
                        <th class="col-organization">機関</th>
                    </tr>
                </thead>
                <tbody>
                    {% for q in skills.qualifications %}
                    <tr>
                        <td>{{ q.date }}</td>
                        <td>{{ q.name }}</td>
                        <td>{{ q.org }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <h3 class="subsection-title">扱える言語・ツール</h3>
        <div class="skills-list">
            {% for category in skills.languages %}
            <div class="skill-category">
                <h4>{{ category.title }}</h4>
                <ul>
                    {% for item in category.items %}
                    <li>{{ item }}</li>
                    {% endfor %}
                </ul>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
